{
  "target": "../../../doc/INN_antibody_schema.json#/properties/Type",
  "$comment": "Unit tests for the validation of the Type property",
  "tests": [
    {
      "description": "Valid example",
      "valid": true,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa",
          "Note": "A note about this annotation"
        }
      ]
    },
    {
      "description": "Empty array",
      "valid": false,
      "data": []
    },
    {
      "description": "Non-unique array",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambda"
        }
      ]
    },
    {
      "description": "A single object, rather than an array (even though the object is a valid array item)",
      "valid": false,
      "data": {
        "Instances": [
          1,
          2
        ],
        "Value": "IgG1-lambda"
      }
    },
    {
      "description": "Missing 'Instances' sub-property in one array item",
      "valid": false,
      "data": [
        {
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "Missing 'Value' sub-property in one array item",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ]
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Instances' is a single number, but must be an array",
      "valid": false,
      "data": [
        {
          "Instances": 1,
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Instances' array cannot be empty (minItems: 1)",
      "valid": false,
      "data": [
        {
          "Instances": [],
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "Empty string for 'Value' sub-property of one array item",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": ""
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Value' is a disallowed string (regex pattern edge case)",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG5-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Value' is a disallowed string (regex pattern edge case)",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambd"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Value' is a disallowed string (regex pattern edge case)",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "Fv-heavy"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "'Value' is a disallowed string (the classes are in the wrong order; it should be slash-separated heavy chains, dash, slash-separated light chains)",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambda/IgG4-kappa"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa"
        }
      ]
    },
    {
      "description": "Additional properties are not allowed in items",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            2
          ],
          "Value": "IgG1-lambda"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "IgG1-kappa",
          "Note": "A note about this annotation",
          "Extra": true
        }
      ]
    }
  ]
}
