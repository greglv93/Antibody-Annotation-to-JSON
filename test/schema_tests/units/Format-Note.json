{
  "target": "../../../doc/INN_antibody_schema.json#/properties/Format-Note",
  "$comment": "Unit tests for the validation of the Format-Note property",
  "tests": [
    {
      "description": "Valid example",
      "valid": true,
      "data": [
        {
          "Instances": [
            1,
            3
          ],
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": [
            5,
            6
          ],
          "Value": "transgenic rabbit with human genes"
        }
      ]
    },
    {
      "description": "Empty array",
      "valid": false,
      "data": []
    },
    {
      "description": "Non-unique array",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            3
          ],
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": [
            1,
            3
          ],
          "Value": "humanized by Kabat CDR grafting"
        }
      ]
    },
    {
      "description": "A single object, rather than an array (even though the object is a valid array item)",
      "valid": false,
      "data": {
        "Instances": [
          1,
          3
        ],
        "Value": "humanized by Kabat CDR grafting"
      }
    },
    {
      "description": "Missing 'Instances' sub-property in one array item",
      "valid": false,
      "data": [
        {
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": [
            5,
            6
          ],
          "Value": "transgenic rabbit with human genes"
        }
      ]
    },
    {
      "description": "Missing 'Value' sub-property in one array item",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            3
          ],
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": [
            5,
            6
          ]
        }
      ]
    },
    {
      "description": "'Instances' is a single number, but must be an array",
      "valid": false,
      "data": [
        {
          "Instances": 1,
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": 5,
          "Value": "transgenic rabbit with human genes"
        }
      ]
    },
    {
      "description": "'Instances' array cannot be empty (minItems: 1)",
      "valid": false,
      "data": [
        {
          "Instances": [],
          "Value": "humanized by Kabat CDR grafting"
        },
        {
          "Instances": [
            5,
            6
          ],
          "Value": "transgenic rabbit with human genes"
        }
      ]
    },
    {
      "description": "Empty string for 'Value' sub-property of one array item (minLength is 2)",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            3
          ],
          "Value": ""
        },
        {
          "Instances": [
            5,
            6
          ],
          "Value": "transgenic rabbit with human genes"
        }
      ]
    },
    {
      "description": "Additional properties are not allowed in items",
      "valid": false,
      "data": [
        {
          "Instances": [
            1,
            3
          ],
          "Value": "humanized by Kabat CDR grafting",
          "Extra": true
        },
        {
          "Instances": [
            5,
            6
          ],
          "Value": "transgenic rabbit with human genes"
        }
      ]
    }
  ]
}
