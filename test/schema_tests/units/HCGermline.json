{
  "target": "../../../doc/INN_antibody_schema.json#/properties/HCGermline",
  "$comment": "Unit tests for the validation of the HCGermline property",
  "tests": [
    {
      "description": "Valid entries with and without the optional Domains sub-property",
      "valid": true,
      "$comment": "The schema currently allows this, but future updates should ensure that if 'Domains' is present in one item, there must be at least one more item with the same 'Instance' value and a different 'Domains' value",
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01"
        },
        {
          "Instance": 4,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*09",
          "Domains": [
            "CH2",
            "CH3"
          ]
        }
      ]
    },
    {
      "description": "Object instead of array is invalid even if it would be a valid item",
      "valid": false,
      "data": {
        "Instance": 3,
        "Species": "Homo sapiens",
        "GeneID": "IGHG1*01"
      }
    },
    {
      "description": "Empty array is not allowed",
      "valid": false,
      "data": []
    },
    {
      "description": "Duplicate items violate the uniqueItems constraint",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01"
        },
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01"
        }
      ]
    },
    {
      "description": "Missing required 'Instance' sub-property",
      "valid": false,
      "data": [
        {
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01"
        }
      ]
    },
    {
      "description": "'Instance' must be a non-negative integer",
      "valid": false,
      "data": [
        {
          "Instance": -1,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01"
        }
      ]
    },
    {
      "description": "Missing required 'Species' sub-property",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "GeneID": "IGHG1*01"
        }
      ]
    },
    {
      "description": "'Species' must match the speciesBinomial pattern",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "human",
          "GeneID": "IGHG1*01"
        }
      ]
    },
    {
      "description": "Missing required 'GeneID' sub-property",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens"
        }
      ]
    },
    {
      "description": "'GeneID' must match the IMGT pattern",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG*0"
        }
      ]
    },
    {
      "description": "'Domains' must be an array when present",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01",
          "Domains": "CH1"
        }
      ]
    },
    {
      "description": "'Domains' entries must come from the allowed enum",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01",
          "Domains": [
            "VH"
          ]
        }
      ]
    },
    {
      "description": "'Domains' entries must be unique",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01",
          "Domains": [
            "CH2",
            "CH2"
          ]
        }
      ]
    },
    {
      "description": "Additional properties are not allowed in items",
      "valid": false,
      "data": [
        {
          "Instance": 3,
          "Species": "Homo sapiens",
          "GeneID": "IGHG1*01",
          "Extra": true
        }
      ]
    }
  ]
}
